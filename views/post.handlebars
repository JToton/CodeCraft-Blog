<h1>{{post.title}}</h1>

{{#if error}}
  <p>{{error}}</p>
{{/if}}

<div class="post">
  <p>{{post.content}}</p>
  <p class="post-meta">Author:
    {{post.user.username}}
    | Created at:
    {{post.createdAt}}</p>
</div>

<h2>Comments</h2>
{{#if post.comments.length}}
  <ul>
    {{#each post.comments}}
      <li class="comment">
        <p>{{content}}</p>
        <p class="comment-meta">Author:
          {{user.username}}
          | Created at:
          {{createdAt}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No comments yet.</p>
{{/if}}

{{#if loggedIn}}
  <h3>Add a Comment</h3>
  <form action="/posts/{{post.id}}/comments" method="POST">
    <div>
      <label for="content">Comment:</label>
      <textarea id="content" name="content" required></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>Please <a href="/login">log in</a> to leave a comment.</p>
{{/if}}